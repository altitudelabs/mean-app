.modal-header
  h3 Edit History
.modal-body.modal-two-col
  form.form(name='form', ng-submit='ok(form)', novalidate='')
    .col-md-6
      .form-group
        label Reference #
        input.form-control(type='text', name='referenceId', placeholder='This should be autogenerated later!', ng-model='newHistory.referenceId')
      .form-group
        label Date
        input.form-control(type='date', name='date', placeholder='', ng-model='newHistory.date')

    .col-md-6
      .form-group
        label Version
        ui-select(ng-model='newHistory.version' theme='bootstrap')
          ui-select-match(placeholder="Version of TSN?") {{$select.selected.name}}
          ui-select-choices(repeat="choice.version as choice in choices")
            div(ng-bind-html='choice.name')
      .form-group
        label Notes
        textarea.form-control(type='text', name='notes' placeholder='Notes' rows='3' ng-model='newHistory.notes')
    .clearfix

    .modal-footer
      button.btn.btn-primary.pull-right(type='submit') Done
      button.btn.btn-light.right-spacer.pull-right(type='button', ng-click='cancel()') Cancel
