.modal-header
  h3 Edit Account
.modal-body
  .form-group
    ui-select(ng-model='project.account[0]' theme='bootstrap')
      ui-select-match(placeholder="Select Account") {{$select.selected.name}}
      ui-select-choices(repeat="account in cachedAccounts | filter: $select.search")
        div(ng-bind-html='account.name | highlight: $select.search')
.modal-footer
  button.btn.btn-primary.pull-right(ng-click='ok()') Save
  button.btn.btn-light.right-spacer.pull-right(ng-click='cancel()') Cancel