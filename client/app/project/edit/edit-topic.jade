.modal-header
  h3 Edit Topic
.modal-body
  .form-group
    label Topic
      span.required *
    tags-input(ng-model='project.topics', replace-spaces-with-dashes='false', add-from-autocomplete-only='true', placeholder='Type to add industry')
      auto-complete(source='lookupTopic($query)', min-length='1')
.modal-footer
  button.btn.btn-primary.pull-right(ng-click='ok()') Save
  button.btn.btn-light.right-spacer.pull-right(ng-click='cancel()') Cancel