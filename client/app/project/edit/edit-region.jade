.modal-header
  h3 Edit Region
.modal-body
  .form-group
    label Region
      span.required *
    tags-input(ng-model='project.region', key-property='_id', display-property='display', replace-spaces-with-dashes='false', add-from-autocomplete-only='true', placeholder='Type to add region')
      auto-complete(source='lookupRegion($query)', min-length='1')
.modal-footer
  button.btn.btn-primary.pull-right(ng-click='ok()') Save
  button.btn.btn-light.right-spacer.pull-right(ng-click='cancel()') Cancel