.modal-header
  h3 Invite Members
.modal-body
  .form-group
    tags-input(key-property='_id', display-property='name', ng-model='project.members', replace-spaces-with-dashes='false', add-from-autocomplete-only='true', placeholder='Type to add members')
      auto-complete(source='lookupMember($query)', min-length='1')
.modal-footer
  button.btn.btn-primary.pull-right(ng-click='ok()') Add Members
  button.btn.btn-light.right-spacer.pull-right(ng-click='cancel()') Cancel