.modal-header
  h3 Project Manager
.modal-body
  .form-group
    ui-select(ng-model='project.manager' theme='bootstrap')
      ui-select-match(placeholder="Select project manager") {{$select.selected.name}}
      ui-select-choices(repeat="member in project.members | filter: $select.search")
        div(ng-bind-html='member.name | highlight: $select.search')
.modal-footer
  button.btn.btn-primary.pull-right(ng-click='ok()') Confirm
  button.btn.btn-light.right-spacer.pull-right(ng-click='cancel()') Cancel